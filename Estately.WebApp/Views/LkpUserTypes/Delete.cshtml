@model Estately.Services.ViewModels.UserTypeViewModel

@{
    ViewData["Title"] = "Delete User Type";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete User Type</h1>

<div class="alert alert-danger">
    Are you sure you want to delete this user type?
</div>

<table class="table table-bordered">
    <tr>
        <th>User Type Name</th>
        <td>@Model.UserTypeName</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserTypeID" />
    <button class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>