@model Estately.Services.ViewModels.DepartmentsListViewModel

@{
    ViewData["Title"] = "Departments Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-create {
        background-color: #28A745 !important;
        color: white !important;
    }

        .btn-create:hover {
            background-color: #218838 !important;
        }

    .btn-edit {
        background-color: #00204A !important;
        color: white !important;
    }

        .btn-edit:hover {
            background-color: #003A87 !important;
        }

    .btn-details {
        background-color: #6C757D !important;
        color: white !important;
    }

        .btn-details:hover {
            background-color: #5a6268 !important;
        }

    .btn-delete {
        background-color: #DC3545 !important;
        color: white !important;
    }

        .btn-delete:hover {
            background-color: #c82333 !important;
        }

    .custom-pagination-container {
        width: 100% !important;
        display: flex !important;
        justify-content: center !important; /* Center the pagination */
    }

    .custom-pagination {
        display: flex !important;
        flex-wrap: wrap !important; /* Make responsive on small screens */
        gap: 8px !important;
        justify-content: center !important;
        align-items: center !important;
        margin: 20px 0 !important;
    }
    .page-btn,
    .page-btn.disabled {
        padding: 10px 16px !important;
        border: 1px solid #00204A !important;
        border-radius: 6px !important;
        text-decoration: none !important;
        color: #00204A !important;
        background: white !important;
        font-weight: 500 !important;
        min-width: 45px !important;
        text-align: center !important; /* Text centered inside box */
        display: flex !important;
        justify-content: center !important;
        align-items: center !important;
        transition: 0.3s ease !important;
    }

    .page-btn:hover {
        background: #00204A !important;
        color: white !important;
    }

    /* Active page matches hover */
    .page-btn.active {
        background: #00204A !important;
        color: white !important;
    }

    /* Disabled button */
    .page-btn.disabled {
        background: #f5f5f5 !important;
        color: #bbb !important;
        cursor: not-allowed !important;
        pointer-events: none !important;
    }

    /* RESPONSIVE */
    @@media (max-width: 576px) {
        .page-btn {
            padding: 8px 12px;
            font-size: 14px;
            min-width: 38px;
        }
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Departments</h4>
    <a asp-action="Create" class="btn btn-admin">
        <i class="bi bi-plus-circle me-2"></i>Add New Department
    </a>
</div>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-10">
            <input type="text" name="search" class="form-control" placeholder="Search departments..." value="@Model.SearchTerm" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-admin w-100">Search</button>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Department Name</th>
            <th>Manager Name</th>
            <th>Email</th>
            <th>Is Deleted</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Departments)
        {
            <tr>
                <td>@item.DepartmentID</td>
                <td>@item.DepartmentName</td>
                <td>@item.ManagerName</td>
                <td>@item.Email</td>
                <td>@item.IsDeleted</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-edit btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-details btn-sm">Details</a>
                    <form asp-action="Delete" asp-route-id="@item.DepartmentID"
                          method="get" style="display:inline;">
                        <button class="btn btn-delete btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 0)
{
    <div class="row">
        <div class="custom-pagination-container">
            <div class="custom-pagination">

                <!-- Prev -->
                @if (Model.Page > 1)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Prev</a>
                }
                else
                {
                    <span class="page-btn disabled">Prev</span>
                }

                <!-- Page numbers -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn @(i == Model.Page ? "active" : "")">@i</a>
                }

                <!-- Next -->
                @if (Model.Page < Model.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm"
                       class="page-btn">Next</a>
                }
                else
                {
                    <span class="page-btn disabled">Next</span>
                }

            </div>
        </div>
    </div>
}
