@model Estately.WebApp.ViewModels.UserListViewModel
@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Users Management</h4>
        <a asp-action="Create" asp-controller="TblUsers" class="btn btn-admin">
            <i class="bi bi-plus-circle me-2"></i>Add User
        </a>
        <a asp-action="Edit" asp-controller="TblUsers" class="btn btn-admin">
            <i class="bi bi-plus-circle me-2"></i>Edit User
        </a>
        <a asp-action="Delete" asp-controller="TblUsers" class="btn btn-admin">
            <i class="bi bi-plus-circle me-2"></i>Delete User
        </a>
    </div>
    
    <form method="get" asp-action="Index" asp-controller="TblUsers" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by email or username..." value="@Model.SearchTerm" />
            </div>
            <div class="col-md-2">
                <input type="number" name="pageSize" class="form-control" value="@Model.PageSize" min="5" max="100" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-admin w-100">Search</button>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>User Type</th>
                    <th>Is Employee</th>
                    <th>Is Client</th>
                    <th>Is Developer</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.UserID</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@(user.UserTypeName ?? "N/A")</td>
                        <td>@(user.IsEmployee == true ? "Yes" : "No")</td>
                        <td>@(user.IsClient == true ? "Yes" : "No")</td>
                        <td>@(user.IsDeveloper == true ? "Yes" : "No")</td>
                        <td>
                            @if (user.IsDeleted == true)
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-controller="TblUsers" asp-route-id="@user.UserID" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" asp-action="Update" asp-controller="TblUsers" asp-route-id="@user.UserID" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-@(user.IsDeleted == true ? "success" : "warning")">
                                        <i class="bi bi-@(user.IsDeleted == true ? "check-circle" : "x-circle")"></i>
                                    </button>
                                </form>
                                <form method="post" asp-action="Delete" asp-controller="TblUsers" asp-route-id="@user.UserID" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-controller="TblUsers"
                           asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@Model.SearchTerm">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div> *@

@model Estately.Services.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1 class="mb-4">Users</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get">
            <div class="input-group">
                <input type="text" name="search" class="form-control"
                       placeholder="Search..." value="@Model.SearchTerm" />
                <button class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>

    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Email</th>
            <th>Username</th>
            <th>User Type</th>
            @* <th>Status</th> *@
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.Email</td>
                <td>@user.Username</td>
                <td>@user.UserTypeName</td>

                @* <td>
                    @if (user.IsDeleted == true)
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </td> *@

                <td>@user.CreatedAt?.ToString("yyyy-MM-dd")</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@user.UserID" class="btn btn-info btn-sm">Details</a>

                    <form asp-action="ToggleStatus" asp-route-id="@user.UserID"
                          method="post" style="display:inline;">
                        <button class="btn btn-secondary btn-sm">Toggle</button>
                    </form>

                    <form asp-action="Delete" asp-route-id="@user.UserID"
                          method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure?')">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Model.SearchTerm">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}