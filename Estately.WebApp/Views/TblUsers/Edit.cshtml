@model Estately.Services.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .btn-save {
        background-color: #00204A !important;
        color: white !important;
        transition: 0.3s ease !important;
    }

        .btn-savehover {
            background-color: #003A87 !important; /* slightly darker navy */
        }
</style>

<h1>Edit User</h1>

<form asp-action="Edit" method="post" class="mt-4">

    <input type="hidden" asp-for="UserID" />

    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label>Username</label>
        <input asp-for="Username" class="form-control" disabled />
    </div>
    @*Check the Checkboxes With the UserTypeId*@
    <div class="mb-3">
        <label>User Type</label>
        <select asp-for="UserTypeID" class="form-control" asp-items="ViewBag.UserTypes"></select>
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsEmployee" class="form-check-input" />
        <label class="form-check-label">Is Employee</label>
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsClient" class="form-check-input" />
        <label class="form-check-label">Is Client</label>
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsDeveloper" class="form-check-input" />
        <label class="form-check-label">Is Developer</label>
    </div>

    <button class="btn btn-save">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
