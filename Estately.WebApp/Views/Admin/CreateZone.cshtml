@model Estately.Services.ViewModels.ZoneViewModel
@{
    ViewData["Title"] = "Create Zone";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>Create New Zone</h4>
    
    <form method="post" asp-action="CreateZone" asp-controller="Admin" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ZoneName" class="form-label"></label>
                <input asp-for="ZoneName" class="form-control" />
                <span asp-validation-for="ZoneName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="CityID" class="form-label"></label>
                <select asp-for="CityID" asp-items="@(ViewBag.Cities as SelectList)" class="form-select">
                    <option value="">-- Select City --</option>
                </select>
                <span asp-validation-for="CityID" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-admin me-2">Create Zone</button>
            <a asp-action="Zones" asp-controller="Admin" class="btn btn-admin-outline">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

