@model Estately.Services.ViewModels.BranchViewModel
@{
    ViewData["Title"] = "Edit Branch";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>Edit Branch</h4>
    
    <form method="post" asp-action="EditBranch" asp-controller="Admin" class="mt-4">
        <input type="hidden" asp-for="BranchID" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="BranchName" class="form-label"></label>
                <input asp-for="BranchName" class="form-control" />
                <span asp-validation-for="BranchName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="ManagerName" class="form-label"></label>
                <input asp-for="ManagerName" class="form-control" />
                <span asp-validation-for="ManagerName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="IsDeleted" id="IsDeleted" value="true" @(Model.IsDeleted == true ? "checked" : "") />
                <input type="hidden" name="IsDeleted" value="false" />
                <label class="form-check-label" for="IsDeleted">Deleted</label>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-admin me-2">Update Branch</button>
            <a asp-action="Branches" asp-controller="Admin" class="btn btn-admin-outline">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

