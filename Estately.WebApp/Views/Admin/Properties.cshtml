@model Estately.WebApp.ViewModels.PropertyListViewModel
@{
    ViewData["Title"] = "Properties Management";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Properties Management</h4>
        <a asp-action="CreateProperty" asp-controller="Admin" class="btn btn-admin">
            <i class="bi bi-plus-circle me-2"></i>Add New Property
        </a>
    </div>

    <form method="get" asp-action="Properties" asp-controller="Admin" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by title or address..." value="@Model.SearchTerm" />
            </div>
            <div class="col-md-2">
                <input type="number" name="pageSize" class="form-control" value="@Model.PageSize" min="5" max="100" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-admin w-100">Search</button>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Address</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Price</th>
                    <th>Area</th>
                    <th>Zone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in Model.Properties)
                {
                    <tr>
                        <td>@property.PropertyID</td>
                        <td>@property.Title</td>
                        <td>@property.Address</td>
                        <td>@(property.PropertyTypeName ?? "N/A")</td>
                        <td>@(property.StatusName ?? "N/A")</td>
                        <td>@property.Price.ToString("C")</td>
                        <td>@property.Area mÂ²</td>
                        <td>@(property.ZoneName ?? "N/A")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="EditProperty" asp-controller="Admin" asp-route-id="@property.PropertyID" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" asp-action="DeleteProperty" asp-controller="Admin" asp-route-id="@property.PropertyID" class="d-inline" 
                                      onsubmit="return confirm('Are you sure you want to delete this property?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Properties" asp-controller="Admin" 
                           asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@Model.SearchTerm">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

