@model Estately.WebApp.ViewModels.PropertyViewModel
@{
    ViewData["Title"] = "Create Property";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4>Create New Property</h4>
    
    <form method="post" asp-action="CreateProperty" asp-controller="Admin" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="PropertyTypeID" class="form-label"></label>
                <select asp-for="PropertyTypeID" asp-items="@(ViewBag.PropertyTypes as SelectList)" class="form-select">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="PropertyTypeID" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="StatusId" class="form-label"></label>
                <select asp-for="StatusId" asp-items="@(ViewBag.PropertyStatuses as SelectList)" class="form-select">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="ZoneID" class="form-label"></label>
                <select asp-for="ZoneID" asp-items="@(ViewBag.Zones as SelectList)" class="form-select">
                    <option value="">-- Select Zone --</option>
                </select>
                <span asp-validation-for="ZoneID" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="DeveloperProfileID" class="form-label"></label>
                <select asp-for="DeveloperProfileID" asp-items="@(ViewBag.DeveloperProfiles as SelectList)" class="form-select">
                    <option value="">-- Select Developer --</option>
                </select>
                <span asp-validation-for="DeveloperProfileID" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Area" class="form-label"></label>
                <input asp-for="Area" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ExpectedRentPrice" class="form-label"></label>
                <input asp-for="ExpectedRentPrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ExpectedRentPrice" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="ListingDate" class="form-label"></label>
                <input asp-for="ListingDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ListingDate" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="PropertyCode" class="form-label"></label>
                <input asp-for="PropertyCode" class="form-control" />
                <span asp-validation-for="PropertyCode" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="AgentId" class="form-label"></label>
                <select asp-for="AgentId" asp-items="@(ViewBag.Agents as SelectList)" class="form-select">
                    <option value="">-- Select Agent --</option>
                </select>
                <span asp-validation-for="AgentId" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="YearBuilt" class="form-label"></label>
                <input asp-for="YearBuilt" class="form-control" type="number" />
                <span asp-validation-for="YearBuilt" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="FloorsNo" class="form-label"></label>
                <input asp-for="FloorsNo" class="form-control" type="number" />
                <span asp-validation-for="FloorsNo" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="BedsNo" class="form-label"></label>
                <input asp-for="BedsNo" class="form-control" type="number" />
                <span asp-validation-for="BedsNo" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="BathsNo" class="form-label"></label>
                <input asp-for="BathsNo" class="form-control" type="number" />
                <span asp-validation-for="BathsNo" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Latitude" class="form-label"></label>
                <input asp-for="Latitude" class="form-control" type="number" step="0.000001" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Longitude" class="form-label"></label>
                <input asp-for="Longitude" class="form-control" type="number" step="0.000001" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <div class="form-check">
                <input asp-for="IsFurnished" class="form-check-input" type="checkbox" />
                <label asp-for="IsFurnished" class="form-check-label"></label>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-admin me-2">Create Property</button>
            <a asp-action="Properties" asp-controller="Admin" class="btn btn-admin-outline">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

