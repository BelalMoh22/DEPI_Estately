@model Estately.Services.ViewModels.PropertiesListViewModel

@{
    ViewData["Title"] = "Properties | Estately";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .property-img-wrapper {
        width: 100%;
        height: 400px; /* Adjust height as you want */
        overflow: hidden;
        border-radius: 4px;
    }

    .property-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .custom-pagination {
        display: flex !important;
        gap: 8px !important;
        justify-content: center !important;
        align-items: center !important;
    }

    .page-btn,
    .page-btn.disabled {
        display: flex !important; /* enable flex */
        justify-content: center !important; /* horizontal center */
        align-items: center !important; /* vertical center */
        width: 40px !important; /* fixed box width */
        height: 40px !important; /* fixed box height */
        border-radius: 10px !important;
        background: #e5e7eb !important;
        color: #000 !important;
        font-weight: 600 !important;
        text-decoration: none !important;
        transition: 0.2s !important;
    }

        .page-btn:hover {
            background: #00204A !important;
            color: white !important;
        }

        /* Active page matches hover */
        .page-btn.active {
            background: #00204A !important;
            color: white !important;
        }

        /* Disabled button */
        .page-btn.disabled {
            background: #f5f5f5 !important;
            color: #bbb !important;
            cursor: not-allowed !important;
            pointer-events: none !important;
</style>

<div class="hero page-inner overlay"
     style="background-image: url('@Url.Content("~/images/hero_bg_1.jpg")')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <h1 class="heading" data-aos="fade-up">Properties</h1>

                <nav aria-label="breadcrumb"
                     data-aos="fade-up"
                     data-aos-delay="200">
                    <ol class="breadcrumb text-center justify-content-center">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="App">Home</a></li>
                        <li class="breadcrumb-item active text-white-50" aria-current="page">
                            Properties
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div id="section2" class="section">
    <div class="container">

        <div class="row align-items-center mb-5">
            <div class="col-lg-6 text-center mx-auto">
                <h2 class="font-weight-bold header-Text heading">Featured Properties</h2>
            </div>
        </div>

        <div class="row">
            @foreach (var property in Model.Properties)
            {
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <div class="property-item mb-30">

                        <a asp-action="PropertySingle" asp-controller="App" asp-route-id="@property.PropertyID" class="img">
                            <div class="property-img-wrapper">
                                <img src="~/images/properties/@property.FirstImage"
                                     alt="Image" class="property-img" />
                            </div>
                        </a>

                        <div class="property-content">
                            <div class="price mb-2">
                                <span class="header-Text">@property.Price EGP</span>
                            </div>

                            <div>
                                <span class="d-block mb-2 text-black-50">@property.Address</span>
                                <span class="city d-block mb-3 main-Text">@property.CityName , @property.ZoneName</span>

                                <div class="specs d-flex mb-4">
                                    <span class="d-block d-flex align-items-center me-3">
                                        <span class="icon-bed me-2 secondary-Text"></span>
                                        <span class="caption secondary-Text">@property.Beds beds</span>
                                    </span>

                                    <span class="d-block d-flex align-items-center">
                                        <span class="icon-bath me-2 secondary-Text"></span>
                                        <span class="caption secondary-Text">@property.Baths baths</span>
                                    </span>
                                </div>

                                <a asp-action="PropertySingle" asp-controller="App" asp-route-id="@property.PropertyID"
                                   class="btn button py-2 px-3">See details</a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="custom-pagination">
                <!-- Previous -->
                @if (Model.Page > 1)
                {
                    <a asp-action="Properties"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       class="page-btn">Prev</a>
                }
                else
                {
                    <span class="page-btn disabled">Prev</span>
                }

                <!-- Page Numbers -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Properties"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       class="page-btn @(i == Model.Page ? "active" : "")">@i</a>
                }

                <!-- Next -->
                @if (Model.Page < Model.TotalPages)
                {
                    <a asp-action="Properties"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       class="page-btn">Next</a>
                }
                else
                {
                    <span class="page-btn disabled">Next</span>
                }
            </div>
        }
    </div>
</div>
