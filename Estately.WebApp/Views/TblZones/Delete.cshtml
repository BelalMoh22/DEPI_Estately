@model Estately.Services.ViewModels.ZonesViewModel

@{
    ViewData["Title"] = "Delete Zone";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="text-danger">Delete Zone</h4>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this zone?</strong>
</div>

<table class="table table-bordered">
    <tr>
        <th>Zone Name</th>
        <td>@Model.ZoneName</td>
    </tr>
    <tr>
        <th>City</th>
        <td>@Model.City</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ZoneId" />

    <button type="submit" class="btn btn-danger bi bi-trash">
        Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</form>
