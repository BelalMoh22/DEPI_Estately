@model Estately.Services.ViewModels.ZonesViewModel

@{
    ViewData["Title"] = "Zone Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container">
    <h4 class="mb-3">
        <i class="bi bi-geo-alt me-2"></i> Zone Details
    </h4>

    <table class="table table-bordered">
        <tr>
            <th>Zone ID</th>
            <td>@Model.ZoneId</td>
        </tr>

        <tr>
            <th>Zone Name</th>
            <td>@Model.ZoneName</td>
        </tr>

        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>

        <tr>
            <th>Status</th>
            <td>
                @if (Model.IsDeleted == true)
                {
                    <span class="badge bg-danger">Inactive</span>
                }
                else
                {
                    <span class="badge bg-success">Active</span>
                }
            </td>
        </tr>
    </table>

    <a asp-action="Edit" asp-route-id="@Model.ZoneId" class="btn btn-warning">
        <i class="bi bi-pencil-square me-1"></i> Edit
    </a>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>

