@model Estately.Services.ViewModels.PropertyViewModel

@{
    ViewData["Title"] = "Property Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-container p-4">

    <h4 class="mb-3">
        <i class="bi bi-building me-2"></i>Property Details
    </h4>

    <table class="table table-bordered">

        <tr>
            <th>Property ID</th>
            <td>@Model.PropertyID</td>
        </tr>

        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>

        <tr>
            <th>Price</th>
            <td>@Model.Price</td>
        </tr>

        <tr>
            <th>Zone</th>
            <td>@Model.ZoneName</td>
        </tr>

        <tr>
            <th>Status</th>
            <td>@Model.StatusName</td>
        </tr>

        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>

    </table>

    <a asp-action="Edit" asp-route-id="@Model.PropertyID" class="btn btn-edit">
        <i class="bi bi-pencil-square me-1"></i>Edit
    </a>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle me-1"></i>Back to List
    </a>

</div>
