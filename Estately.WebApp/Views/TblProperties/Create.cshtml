@model Estately.Services.ViewModels.PropertyViewModel

@{
    ViewData["Title"] = "Create Property";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-create {
        background-color: #00204A !important;
        color: white !important;
        transition: 0.3s ease !important;
    }

        .btn-create:hover {
            background-color: #003A87 !important;
        }
</style>

<h4>Create Property</h4>

<form asp-action="Create" method="post" class="mt-4">

    <div class="mb-3">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Area (m²)</label>
        <input asp-for="Area" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label>Beds No.</label>
            <input asp-for="BedsNo" type="number" min="0" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label>Baths No.</label>
            <input asp-for="BathsNo" type="number" min="0" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label>Floors No.</label>
            <input asp-for="FloorsNo" type="number" min="0" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label>Year Built</label>
        <input asp-for="YearBuilt" type="number" class="form-control" required />
        <span asp-validation-for="YearBuilt" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Expected Rent Price</label>
        <input asp-for="ExpectedRentPrice" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Latitude</label>
        <input asp-for="Latitude" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Longitude</label>
        <input asp-for="Longitude" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <!-- LOOKUPS -->

    <div class="mb-3">
        <label>Property Type</label>
        <select asp-for="PropertyTypeID" class="form-control" asp-items="ViewBag.PropertyTypes"></select>
    </div>

    <div class="mb-3">
        <label>Status</label>
        <select asp-for="StatusId" class="form-control" asp-items="ViewBag.Statuses"></select>
    </div>

    <div class="mb-3">
        <label>Developer</label>
        <select asp-for="DeveloperProfileID" class="form-control" asp-items="ViewBag.Developers"></select>
    </div>

    <div class="mb-3">
        <label>Zone</label>
        <select asp-for="ZoneID" class="form-control" asp-items="ViewBag.Zones"></select>
    </div>

    <div class="mb-3">
        <label>Assigned Agent</label>
        <select asp-for="AgentId" class="form-control" asp-items="ViewBag.Agents"></select>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsFurnished" class="form-check-input" />
        <label class="form-check-label">Is Furnished</label>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-create">
            <i class="bi bi-check-circle me-2"></i>Create
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-2"></i>Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
